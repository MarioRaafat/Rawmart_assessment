# App Configuration
APP_NAME=Rawmart
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app.up.railway.app
APP_KEY=base64:xxxxxx  # Generate with: php artisan key:generate --show

# CORS - Frontend URL
FRONTEND_URL=https://rawmart-assessment.vercel.app

# PostgreSQL Database
DB_CONNECTION=pgsql
DB_HOST=ep-xxxxx.us-east-2.aws.neon.tech
DB_PORT=5432
DB_DATABASE=neondb
DB_USERNAME=your_username
DB_PASSWORD=your_password
DB_SSLMODE=require

# Session & Cache (use 'file' for simplicity)
SESSION_DRIVER=file
SESSION_LIFETIME=120
CACHE_STORE=file

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error